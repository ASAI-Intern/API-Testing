		{
			"name": "Register API Client",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"\r",
							"pm.collectionVariables.set(\"clientName\", pm.variables.replaceIn(\"{{$randomFirstName}}\"+\"3441212\"));\r",
							"pm.collectionVariables.set(\"clientEmail\", pm.variables.replaceIn(\"{{$randomFirstName}}\"+\"@gmail.com\"));\r",
							"pm.test(\"Status code is 201\", ()=> {\r",
							"    pm.response.to.have.status(201);\r",
							"});\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"pm.collectionVariables.set(\"token\", jsonData.accessToken);\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
